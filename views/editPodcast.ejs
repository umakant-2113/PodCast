<% include partials/header %>
<!--Main-->
<main class="signup container">
  <h1>Edit Podcast</h1>
  <form action="/podcasts/edit" method="POST">
    <input type="text" name="title" placeholder="Title..." />
    <textarea
      name="description"
      rows="10"
      placeholder="Description..."
    ></textarea>
    <input
      type="text"
      name="categories"
      placeholder="Categories(Separated by commas)..."
    />
    <label for="cover">Cover Image</label>
    <input id="cover" type="file" name="cover" placeholder="Cover..." />

    <label for="track">Podcast Track</label>
    <input id="track" type="file" name="audioTrack" placeholder="Track..." />

    <input class="submit" type="submit" value="Update Podcast" />
  </form>
</main>

<% include partials/footer %>
